<div class="jumbotron shadow">

  <h1>Matches</h1>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Opponent</th>
        <th>Map</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.date %></td>
          <td><%= match.opponent %></td>
          <td><%= match.map %></td>
          <td><%= link_to 'Show', user_match_path(current_user, match), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_user_match_path(current_user, match), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Destroy', user_match_path(current_user, match), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="jumbotron shadow actions">
  <%= link_to 'New Match', new_user_match_path(current_user), class: 'btn btn-primary' %>
</div>
