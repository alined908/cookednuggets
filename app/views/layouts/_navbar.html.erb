<header class="shadow">
  <div class="header-inner">
    <div class="header-actions">
      <a class="header-home" href="/">Cooked Nuggets</a>
      <%= link_to "News", threads_path(:f => "news"), class: "header-link " + current_class?(threads_path) %>
      <%= link_to 'Forums', threads_path, class: "header-link " + current_class?(threads_path) %>
      <%= link_to 'Matches', matches_path, class: "header-link " + current_class?(matches_path) %>
      <%= link_to 'Events', events_path, class: "header-link " + current_class?(events_path) %>
      <%= link_to 'Teams', teams_path, class: "header-link " + current_class?(teams_path) %>
      <%= link_to 'Players', players_path, class: "header-link " + current_class?(players_path) %>
    </div>
    <div class="header-user">
      <% if user_signed_in? %>
        <div class="dropdown show">
          <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.username %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <%= link_to 'Scrims', user_matches_path(current_user), class: "dropdown-item" %>
            <%= link_to 'Settings', edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Log In', new_user_session_path, class: "header-link" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "header-link" %>
      <% end %>
    </div>
  </div>
</header>
