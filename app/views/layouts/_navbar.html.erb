    <a class="header-home" href="/">
      <div>Cooked Nuggets</div>
    </a>
    <nav>
      <ul>
        <div id="side-nav" class="navbar-items">
          <li class="first-li <%=current_class?(threads_path)%>"><%= link_to 'Forums', threads_path %></li>
          <li class="<%= current_class?(matches_path)%>"><%= link_to 'Matches', matches_path %></li>
          <li class="<%=current_class?(events_path) %>"><%= link_to 'Events', events_path %></li>
