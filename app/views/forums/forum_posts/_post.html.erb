<div class="parent-post">
  <%= react_component("Post", {post: post, time: get_time_ago(post.created_at), owner: post.user == current_user,
    user: post.user.username.capitalize, authenticity_token: form_authenticity_token, signed_in: user_signed_in?}) %>
  <%= render partial: 'forums/forum_posts/post', collection: post.forum_posts %>
</div>
