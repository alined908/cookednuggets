<%= react_component("Event", {event: @event, compact: false}) %>

<div class="jumbotron shadow skinny">
  <div class="event-stages">
    <%= link_to event_path(@event), class: "link" do %>
    <div class="event-stages-entry">
      <div class="event-stages-dates"><%= @event.start_date.strftime("%b %d") + " - " + @event.end_date.strftime("%b %d")%></div>
      <div class="event-stages-name">Overview</div>
    </div>
    <% end %>
    <% @event.sections.each do |stage| %>
      <%= link_to event_section_path(@event, stage), class: "link" do %>
        <div class="event-stages-entry">
          <div class="event-stages-dates"><%= stage.start.strftime("%b %d") + " - " + stage.end.strftime("%b %d")%></div>
          <div class="event-stages-name"><%=stage.name%></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="jumbotron shadow">
  <h2>Teams</h2>
  <div class="team-table">
    <% @event.teams.each do |team| %>
      <%= link_to team_path(team), class: "team-table-link" do %>
        <div class="team-table-entry">
          <div class="team-table-img">
            <img src=<%=team.logo%>></img>
          </div>
          <%= team.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="jumbotron shadow">
  <h2>Schedule</h2>
  <% @section.officials.each do |match| %>
    <%= react_component("Match", {match: match, compact: true, teams: [Team.find(match.team1_id), Team.find(match.team2_id)]}) %>
  <% end %>
</div>
