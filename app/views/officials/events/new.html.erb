<div>
  <%= form_for(@event, url: events_path) do |f| %>
    <div class="jumbotron shadow">
      <h2>Create New Event</h2>
      <%= f.text_field :name, placeholder: "Event Name", class:"form-control" %>
      <%= f.text_field :location, placeholder: "Location", class:"form-control" %>
      <%= f.text_field :country, placeholder: "Country", class:"form-control" %>
      <%= f.number_field :prize, placeholder: "Prize Pool $", class:"form-control" %>
      <%= f.date_field :start_date, class: 'form-control' %>
      <%= f.date_field :end_date, class: 'form-control' %>
      <%= f.text_area :desc, placeholder: "Description", rows: 5, class:"form-control" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
